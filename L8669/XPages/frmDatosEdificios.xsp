						<xp:inputText id="edf_direccion"
							value="#{Edificios.edificio.edf_direccion}" required="true">
							<xp:this.validators>
								<xp:validateRequired message="La direcciÃ³n es un campo requerido.">
								</xp:validateRequired>
							</xp:this.validators>
						</xp:inputText>
					</xe:formRow>
					
					<xe:formRow id="formRow1" label="Codigo Visual"
						labelPosition="left">
						<xp:inputText id="inputText1"
							value="#{Edificios.edificio.edf_codigoVisual}" required="true">
							<xp:this.validators>
								<xp:validateRequired message="El codigo visual es un campo requerido.">
								</xp:validateRequired>
							</xp:this.validators>
						</xp:inputText>
					</xe:formRow>

					<xe:this.facets>
						<xp:div xp:key="footer">
							<xp:button value="Modificar" id="btnEdit">
								<xp:eventHandler event="onclick" submit="true"
									refreshMode="complete">

								</xp:eventHandler>
							</xp:button>
							<xp:button value="Cerrar" id="button1">
								<xp:eventHandler event="onclick" submit="true"
									refreshMode="complete">

								</xp:eventHandler>
							</xp:button>
							<xp:button value="Confirmar" id="button2">
								<xp:eventHandler event="onclick"
									submit="true" refreshMode="complete">

									<xp:this.action><![CDATA[#{javascript:Edificios.saveEdificio()}]]></xp:this.action>
								</xp:eventHandler>
							</xp:button>
						</xp:div>
					</xe:this.facets>
				</xe:formTable>
			</xp:panel>




		</xp:this.facets>
	</xc:ccLayoutBootstrap>
	
</xp:view>